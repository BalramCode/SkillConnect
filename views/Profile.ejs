      </nav>

      <div class="flex-1 ml-64 content-area-wrapper bg-zinc-600">
        <nav
          class="bg-white sticky top-0 z-10 shadow-md flex justify-between p-4 items-center h-16 border-b border-gray-100"
        >
          <div class="font-bold text-2xl text-gray-800 ml-6">Profile</div>

          <div class="relative w-96">
            <svg
              class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 1114 0z"
              />
            </svg>
            <input
              class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-150"
              type="text"
              placeholder="Search projects, teammates..."
            />
          </div>

          <div class="flex items-center gap-3 pr-6">
            <div
              class="w-10 h-10 bg-indigo-200 rounded-full flex items-center justify-center text-indigo-800 font-semibold"
            >
              <% const fullName = user.fullname; const nameParts =
              fullName.split(' ').filter(part => part.length > 0); let initials
              = ''; if (nameParts.length === 1) { initials =
              nameParts[0].substring(0, 2).toUpperCase(); } else if
              (nameParts.length >= 2) { const firstNameInitial =
              nameParts[0].charAt(0); const lastNameInitial =
              nameParts[nameParts.length - 1].charAt(0); initials =
              (firstNameInitial + lastNameInitial).toUpperCase(); } %> <%=
              initials %>
            </div>
            <div class="flex flex-col justify-center">
              <p class="font-semibold text-gray-800 leading-none">
                <%= user.fullname %>
              </p>
              <p class="text-sm text-gray-500 leading-none mt-1">
                <%= user.university %>
              </p>
            </div>
          </div>
        </nav>

        <!-- To do Tomorrow -->
        <div class="w-full bg-zinc-600 shadow-2xl p-6 md:p-10 text-white">
          <!-- Header and Avatar Section -->
          <header class="text-center mb-8">
            <p class="text-sm text-zinc-400">
              Manage your account information and connections
            </p>
          </header>

          <div class="flex flex-col md:flex-row gap-6">
            <!-- Left Column: Avatar & Main Info -->
            <div
              class="flex-shrink-0 flex flex-col items-center md:items-start w-full md:w-1/3"
            >
              <div class="relative mb-6">
                <!-- Profile Picture/Initials -->
                <div
                  class="w-32 h-32 border-4 border-indigo-400/50 bg-indigo-200 rounded-full flex items-center justify-center text-4xl text-indigo-800 font-semibold shadow-lg"
                >
                  <!-- <span id="initials">AC</span> -->
                  <%= initials %>
                </div>
                <!-- Status Dot (Mocked) -->
                <div
                  class="absolute bottom-2 right-2 w-4 h-4 bg-green-500 rounded-full border-2 border-dark-card"
                ></div>
              </div>

              <div class="text-center md:text-left w-full">
                <h2 class="text-2xl font-bold text-indigo-300" id="fullname">
                  <%= user.fullname %>
                </h2>
                <p class="text-zinc-400 text-sm mb-4">
                  @<%= user.fullname %>\_dev
                </p>
                <p class="text-zinc-300 text-sm mb-4" id="description">
                  Full-stack developer passionate about creating innovative
                  solutions. Currently pursuing Computer Science with a focus on
                  AI and machine learning. Love building products that make a
                  difference.
                </p>
              </div>
            </div>

            <div class="flex-grow w-full md:w-2/3 space-y-8">
              <div
                class="grid grid-cols-1 sm:grid-cols-2 gap-6 pb-6 border-b border-zinc-700"
              >
                <div>
                  <p class="text-xs font-medium text-zinc-400 mb-1">Email</p>
                  <p
                    class="text-sm font-medium text-white hover:underline hover:text-blue-800 cursor-pointer"
                    id="email"
                  >
                    <%= user.email %>
                  </p>
                </div>
                <div>
                  <p class="text-xs font-medium text-zinc-400 mb-1">
                    University
                  </p>
                  <p class="text-sm font-medium text-white" id="university">
                    <%= user.university %>
                  </p>
                </div>
              </div>

              <!-- Social Connections Section -->
              <div>
                <p class="text-sm font-medium text-zinc-400 mb-3">
                  Connect with me
                </p>
                <div class="flex flex-wrap gap-3">
                  <!-- Social Link with SVG Icon and Hover Transition/Scale -->
                  <a
                    href="#"
                    class="flex items-center space-x-2 w-30 px-3 rounded-lg bg-zinc-700 text-sm font-medium text-white shadow-md hover:bg-zinc-600 transition-all duration-300 hover:scale-[1.03]"
                    aria-label="Github"
                  >
                    <!-- GitHub Icon SVG (lucide icon) -->
                    <svg
                      class="w-4 h-4 text-white"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      aria-hidden="true"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M12 2C6.477 2 2 6.484 2 12.008c0 4.417 2.865 8.16 6.839 9.504.499.092.679-.217.679-.482 0-.237-.008-.868-.013-1.703-2.782.605-3.374-1.343-3.374-1.343-.454-1.158-1.11-1.465-1.11-1.465-.908-.62.067-.608.067-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.529 2.341 1.082 2.918.823.092-.647.35-1.082.64-1.332-2.22-.251-4.555-1.112-4.555-4.947 0-1.092.39-1.983 1.029-2.684-.103-.251-.446-1.272.098-2.65 0 0 .84-.268 2.75 1.022A9.58 9.58 0 0112 4.904c.85.004 1.701.113 2.516.315 1.902-1.29 2.747-1.022 2.747-1.022.546 1.379.202 2.398.099 2.649.64.701 1.028 1.592 1.028 2.684 0 3.84-2.339 4.686-4.566 4.935.359.366.678.966.678 1.944 0 1.332-.012 2.417-.012 2.747 0 .266.18.576.687.473C20.053 20.166 23 16.413 23 12.008 23 6.484 18.522 2 12 2z"
                      />
                    </svg>
                    <span>GitHub</span>
                  </a>

                  <a
                    href="#"
                    class="flex items-center space-x-2 px-3 w-30 rounded-lg bg-zinc-700 text-sm font-medium text-white shadow-md hover:bg-zinc-600 transition-all duration-300 hover:scale-[1.03]"
                    aria-label="LinkedIn"
                  >
                    <!-- LinkedIn Icon SVG (lucide icon) -->
                    <svg
                      class="w-4 h-4 text-white"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      aria-hidden="true"
                    >
                      <path
                        d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                      />
